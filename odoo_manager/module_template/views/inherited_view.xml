<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_{{ model_name }}_form" model="ir.ui.view">
        <field name="name">{{ dot_model_temp_name }}.form.{{ module_name }}</field>
        <field name="model">{{ dot_model_temp_name }}</field>
        <field name="inherit_id" ref="{{ depends }}.view_{{ model_name }}_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='existing_field']" position="after">
                <field name="new_field"/>
            </xpath>
        </field>
    </record>
</odoo>
